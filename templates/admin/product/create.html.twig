{% extends 'admin/layouts/base.html.twig' %}
{% block title_detailed %}Edit Product{% endblock %}

{% block body %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <a
                        href="{{ path('admin.product.listAll') }}"
                        class="font-weight-bold text-primary"
                    >Products</a>
                    <div class="ml-2 mr-2">/</div>
                    <h6 class="m-0 font-weight-bold text-primary">
                        {% if isEdit %}
                            Edit Product
                        {% else %}
                            Add new
                        {% endif %}
                    </h6>
                </div>
            </div>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="form-group row">
                <div class="col-md-1">
                    {{ form_label(form.title) }}
                </div>
                <div class="col-md-11">
                    {{ form_widget(form.title) }}
                    <div class="form-error">
                        {{ form_errors(form.title) }}
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-1">
                    {{ form_label(form.price) }}
                </div>
                <div class="col-md-11">
                    {{ form_widget(form.price) }}
                    <div class="form-error">
                        {{ form_errors(form.price) }}
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-1">
                    {{ form_label(form.quantity) }}
                </div>
                <div class="col-md-11">
                    {{ form_widget(form.quantity) }}
                    <div class="form-error">
                        {{ form_errors(form.quantity) }}
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-1">
                    {{ form_label(form.description) }}
                </div>
                <div class="col-md-11">
                    {{ form_widget(form.description) }}
                    <div class="form-error">
                        {{ form_errors(form.description) }}
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-1">
                    {{ form_label(form.newImage) }}
                </div>
                <div class="col-md-11">
                    {{ form_widget(form.newImage) }}

                    <div class="form-error">
                        {{ form_errors(form.newImage) }}
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-1"></div>
                <div class="col-md-11">
                    {{ form_widget(form.is_published) }}
                    {{ form_label(form.is_published) }}
                    <div class="form-error">
                        {{ form_errors(form.is_published) }}
                    </div>
                </div>
            </div>

            <hr/>
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex justify-content-between align-items-center w-100">
                    <a
                        href="{{ path('admin.product.listAll') }}"
                        class="btn btn-default btn-return "
                    >
                        <i class="fas fa-arrow-circle-left"></i>
                    </a>
                    <button
                        type="submit"
                        class="btn btn-primary"
                    >
                        Save changes
                    </button>
                </div>
            </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
