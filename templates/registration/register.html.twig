{% extends 'main/layouts/base.html.twig' %}

{% block title %}Register - RankedChoice{% endblock %}
{% block page_keywords %}register, account, sign up{% endblock %}
{% block page_description %}Create new account on RankedChoice shop!{% endblock %}

{% block body %}
    <div class="container-fluid py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <div class="card shadow">
                    <div class="card-header">
                        <h3 class="card-title mb-0">
                            <i class="fas fa-user-plus"></i>
                            Register
                        </h3>
                    </div>
                    <div class="card-body">
                        {{ form_errors(registrationForm) }}

                        {{ form_start(registrationForm, {'attr':
                            {'class': 'needs-validation', 'novalidate': true}}) }}

                            <div class="mb-1">
                                {{ form_label(registrationForm.email, 'Email Address', {
                                    'label_attr': {'class': 'form-label'}
                                }) }}
                                {{ form_widget(registrationForm.email, {
                                    'attr': {'class': 'form-control'}
                                }) }}
                                {{ form_help(registrationForm.email) }}
                                {{ form_errors(registrationForm.email) }}
                            </div>

                            <!-- Пароль поле -->
                            <div class="mb-1">
                                {{ form_label(registrationForm.plainPassword, 'Password', {
                                    'label_attr': {'class': 'form-label'}
                                }) }}
                                {{ form_widget(registrationForm.plainPassword, {
                                    'attr': {'class': 'form-control'}
                                }) }}
                                {{ form_help(registrationForm.plainPassword) }}
                                {{ form_errors(registrationForm.plainPassword) }}
                            </div>

                            <!-- Согласие с условиями -->
                            <div class="mb-1">
                                {{ form_row(registrationForm.agreeTerms) }}
                            </div>

                            <!-- Рендер остальных полей формы -->
                            {{ form_rest(registrationForm) }}

                            <!-- Кнопки -->
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary me-md-2">
                                    <i class="fas fa-user-plus"></i>
                                    Register
                                </button>
                                <a href="{{ path('homepage') }}" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i>
                                    Back to Home
                                </a>
                            </div>

                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
